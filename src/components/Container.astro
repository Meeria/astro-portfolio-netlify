              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Certifications"} icon={"carbon:certificate"}>
      {
        CONTENT.certificates.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.issued}
              description={item.org}
              tags={item.description}
              url={item.url}
              url_name={"Voir certifications"}
            />
          );
        })
      }
    </AccordionLayout>


    <AccordionLayout title={"Contact"} icon={"ri:contacts-book-fill"}>
      {
        CONTENT.contact.map((item) => {
          return (
            <Card
              title={""}
              timeframe=""
              description=""
              tags=""
              url={item.source}
              url_name={item.source_name}
            />
          );
        })
      }
    </AccordionLayout>


    <AccordionLayout title={"Ma veille"} icon={"mdi:home"}>
      {
        CONTENT.veille.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe=""
              description={item.description}
              tags=""
              url={item.source}
